<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayour0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
    android:weightSum="1" android:background="@color/myred">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical" >
        <ImageButton
            android:id="@+id/homepageButton_f"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/trans"
            android:scaleType="fitXY"
            android:src="@drawable/hjem" />

        <view
            android:id="@+id/gallery"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
            class="em.twitterido.aw.YappsCircleGallery" />

<!--        <em.twitterido.aw.YappsCircleGallery-->
<!--            android:id="@+id/gallery"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/captionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelmessage"
            android:textSize="30dp" android:gravity="center_horizontal"/>

        <!--  -->

        <TextView
            android:id="@+id/activityNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="110dp" >

        <ImageButton
            android:id="@+id/friendspageButton_f"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2.5dip"
            android:background="@color/trans"
            android:scaleType="fitXY"
            android:src="@drawable/venner" />

        <ImageButton
            android:id="@+id/offerpageButton_f"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2.5dip"
            android:background="@color/trans"
            android:scaleType="fitXY"
            android:src="@drawable/tilbut" />

        <ImageButton
            android:id="@+id/newofferButton_f"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2.5dip"
            android:background="@color/trans"
            android:scaleType="fitXY"
            android:src="@drawable/nye" />
    </LinearLayout>

</LinearLayout>